<Page x:Name="PageLearnedWords" x:Class="Denemelerfalan.LearnedWords"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Denemelerfalan"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="1020"
      Title="LearnedWords" Loaded="PageLearnedWords_Loaded">

    <Grid>
		<DataGrid x:Name="dataGridWordsMy" HorizontalAlignment="Center" Height="520" Width="1000" Margin="20,20,50,0" VerticalAlignment="Center" BorderThickness="5" BorderBrush="Bisque" Background="AntiqueWhite" Foreground="Black" AutoGenerateColumns="False" >
			<DataGrid.Columns>
				<DataGridTextColumn Binding="{Binding id}" Header="id" Width="0"/>
				<DataGridTextColumn Binding="{Binding englishWord}" Header="İNGİLİZCE" Width="*"/>
				<DataGridTextColumn Binding="{Binding turkishWord}" Header="TÜRKÇE" Width="*"/>
				<DataGridTextColumn Binding="{Binding seviye}" Header="SEVİYE" Width="*"/>
				<DataGridTextColumn Binding="{Binding tarih}" Header="TARİH" Width="*"/>
			</DataGrid.Columns>
		</DataGrid>

	</Grid>
</Page>
